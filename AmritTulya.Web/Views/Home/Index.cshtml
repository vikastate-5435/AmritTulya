    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" style="height:400px !important;" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img src="~/Content/Slider Images/TeaCup.jpg" style="height:395px !important; width:100% !important" alt="image 2">
        </div>

        <div class="item">
            <img src="~/Content/Slider Images/Idli Dosa.jpg" style="height:395px !important; width:100% !important" alt="image 1">
        </div>

        <div class="item">
            <img src="~/Content/Slider Images/Poha.jpg" style="height:395px !important; width:100% !important" alt="image 3">
        </div>

        <div class="item">
            <img src="~/Content/Slider Images/Idli.jpg" style="height:395px !important; width:100% !important" alt="image 1">
        </div>

        <div class="item">
            <img src="~/Content/Slider Images/Upma.jpg" style="height:395px !important; width:100% !important" alt="image 2">
        </div>

        <div class="item">
            <img src="~/Content/Slider Images/VadaPav.jpg" style="height:395px !important; width:100% !important" alt="image 3">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>